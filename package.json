{
  "name": "agri-connect",
  "version": "1.0.0",
  "description": "Direct farmer-consumer marketplace platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean",
    "db:generate": "cd packages/api && pnpm prisma generate",
    "db:push": "cd packages/api && pnpm prisma db push",
    "db:migrate": "cd packages/api && pnpm prisma migrate dev",
    "db:seed": "cd packages/api && pnpm prisma db seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "babel-preset-expo": "^9.5.2",
    "esbuild": "^0.21.5",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "tsx": "^4.20.5"
  },
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-native": "0.73.0",
      "metro": "0.80.9",
      "metro-cache": "0.80.9",
      "metro-config": "0.80.9",
      "metro-core": "0.80.9",
      "metro-file-map": "0.80.9",
      "metro-resolver": "0.80.9",
      "metro-runtime": "0.80.9",
      "metro-source-map": "0.80.9",
      "metro-transform-worker": "0.80.9",
      "metro-babel-transformer": "0.80.9",
      "metro-minify-terser": "0.80.9"
    }
  }
}
